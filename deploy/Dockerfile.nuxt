FROM node:lts as builder
RUN apt-get update && \
    apt-get install git

WORKDIR '/app'
COPY ./package.json ./
COPY ./package-lock.json ./
RUN npm i -g gulp
RUN npm i
COPY . /app

# Legacy Client
RUN git submodule init
RUN git submodule update --remote
WORKDIR '/app/src/legacy-client'
RUN npm i
RUN gulp
WORKDIR '/app'

CMD [ "./startup.sh"]
