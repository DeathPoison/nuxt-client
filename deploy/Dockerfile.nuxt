FROM node:lts as builder
RUN apk update && \
    apk add --no-cache git

ARG API_HOST
ENV API_HOST=$API_HOST
ARG SC_THEME
ENV SC_THEME=$SC_THEME
ARG SC_TITLE
ENV SC_TITLE=$SC_TITLE
ARG SC_SHORT_TITLE
ENV SC_SHORT_TITLE=$SC_SHORT_TITLE

WORKDIR '/app'
COPY ./package.json ./
COPY ./yarn.lock ./
RUN yarn install
COPY . /app
RUN git submodule init && git submodule update
RUN yarn build:nuxt

FROM nginx:alpine
EXPOSE 80

ENV NUXT_HOST=0.0.0.0
ENV NUXT_PORT=80

CMD [ "yarn", "start" ]